<div class="container">
  <h1>Student Form</h1>

  <%= form_for @student do |f| %>
  Student First Name: <%= f.text_field :first_name %><br><br>
  Student Last Name: <%= f.text_field :last_name %><br><br>
  Select class: <%= collection_select(:school_class, :student_id, SchoolClass.all, :title, :title_to_s, prompt: true) %>

  <%= f.submit value="Create Student" %>
  <% end %>
</div>

<div class="container">
  <h1>Student Form</h1>

  <%= form_for @student do |f| %>
  Student First Name: <%= f.text_field :first_name %><br><br>
  Student Last Name: <%= f.text_field :last_name %><br><br>
  Select class: <%= f.collection_select :school_class_id, SchoolClass.all, :title, :title_to_s %>

  <%= f.submit value="Update Student" %>
  <% end %>
</div>


